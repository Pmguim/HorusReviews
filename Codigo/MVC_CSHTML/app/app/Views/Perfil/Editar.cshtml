@model UsuarioModel 
@{
    ViewData["Title"] = "Editar Usuário";
}

<div>

    <h2>Editar Contato:</h2>

</div>

<form asp-controller="Cadastro" asp-action="Alterar" method="post">
            <div class="col textFilmS">
                <h4>Ainda não é cadastrado? Faça hoje mesmo: <br /></h4>

                <div>
                    <p>Nome de usuário:</p>
                    <input type="text" asp-for="UserName" placeholder="Silva_10" class="cadUName" maxlength="15" />
                </div>
                    
                <div>
                    <br /><p>Nome:</p>
                    <input type="text" asp-for="Nome" placeholder="Geraldo Silva Neto" class="cadName" />
                </div>
                
                <div>
                    <br /><p>Data de Nascimento:</p>
                    <input type="date" asp-for="DataNasc" class="cadDate" />
                </div>

                <div>
                    <br /><p>Endereço de E-mail:</p>
                    <input type="email" asp-for="Email" class="cadEmail" placeholder="emailgenerico@serviço.com" maxlength="55" />
                </div>

                <div>
                    <br /><p>Senha:</p>
                    <input type="password" asp-for="Senha" class="cadSenha" placeholder="admin1234" maxlength="12" /><br />
                </div>

                <div>
                    <p class="margem"></p>
                    <a class="nav-link link" asp-area="" asp-controller="Perfil" asp-action="Perfil">
                        <input type="submit" class="cadBut btn btn-secondary" value="Alterar" />
                    </a>
                </div>

            </div>
            </form>
